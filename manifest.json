{
    "manifest_version": 3,
    "name": "Extension Blacklist Checker",
    "version": "1.0",
    "description": "Checks if an extension ID is in a blacklist.",
    "permissions": [
        "tabs",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "https://chromewebstore.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "settings.html"
}